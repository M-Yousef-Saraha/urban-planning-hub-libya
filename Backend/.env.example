# Backend environment example
# Copy this file to .env and fill values before running the backend.

# Server
PORT=3002

# Database (Postgres) - example DSN, replace with your own
# e.g. postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=

# JWT secret used to sign auth tokens
JWT_SECRET=your_jwt_secret_here

# SendGrid API key (optional for local dev). If missing, email sending will be skipped/failed.
SENDGRID_API_KEY=SG.xxxxx

# Emails
FROM_EMAIL=no-reply@example.com
ADMIN_EMAIL=admin@example.com

# Optional: additional envs
# VITE_API_BASE_URL is for the frontend and is set in Frontend/.env(.local)
